{
	"name": "fmentor-stats-preview-nodejs-express-pug",
	"version": "1.0.0",
	"description": "stats preview card component using nodejs, express, and pug",
	"main": "app.js",
	"scripts": {
		"start": "nodemon app.js",
		"start-server": "node app.js",
		"sass-dev": "sass --watch src/scss/main.scss public/css/main.css",
		"sass-prod": "sass src/scss/main.scss public/css/main.css --style=compressed --no-source-map",
		"postcss": "postcss public/css/main.css -o public/css/main.css --use autoprefixer --no-map",
		"prettier": "prettier --write .",
		"dev": "run-s sass-dev",
		"lint": "run-s prettier",
		"build": "run-s lint sass-prod postcss"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/al3xback/fmentor-stats-preview-nodejs-express-pug.git"
	},
	"author": "alex <al3xback@gmail.com>",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/al3xback/fmentor-stats-preview-nodejs-express-pug/issues"
	},
	"homepage": "https://github.com/al3xback/fmentor-stats-preview-nodejs-express-pug#readme",
	"dependencies": {
		"body-parser": "^1.20.2",
		"express": "^4.18.2",
		"pug": "^3.0.2"
	},
	"devDependencies": {
		"nodemon": "^2.0.22",
		"autoprefixer": "^10.4.16",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.31",
		"postcss-cli": "^10.1.0",
		"prettier": "^2.8.8",
		"sass": "^1.62.1"
	},
	"browserslist": [
		"defaults"
	]
}
